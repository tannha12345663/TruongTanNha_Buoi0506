<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Tiêu đề"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/txDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txTitle"
        android:layout_alignStart="@+id/txTitle"
        android:text="Ngày tạo : 11/02/2022"></TextView>

    <TextView
        android:id="@+id/txDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txDate"
        android:layout_alignStart="@+id/txDate"

        android:layout_marginStart="0dp"
        android:text="Nội dung: "></TextView>

    <ImageView
        android:id="@+id/imgDel"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/ic_baseline_delete_24" />


</RelativeLayout>